<div class="max-w-sm rounded overflow-hidden shadow-xl lg:w-1/4 md:w-1/3 sm:w-1/2 xs:w-full my-16">
  <img class="w-full" src="<%= image_path('header.jpg')%>" alt="Sunset in the mountains">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">
      <%= link_to article_preview_alt do %>
        <%= article_preview_alt.title %>
      <% end %>
    </div>
    <p class="text-gray-700 text-base">
      <%= truncate strip_tags(article_preview_alt.content.to_s), length: 65 %>
    </p>
  </div>
  <div class="flex items-center my-3 mx-4">
    <%= link_to users_profile_path(article_preview_alt.user), class:"text-gray-900 leading-none font-semibold" do %>
      <%= gravatar_image_tag article_preview_alt.user.email, class:"w-10 h-10 rounded-full mr-4" %>
    <% end %>
    <div class="text-sm">
      <%= link_to users_profile_path(article_preview_alt.user), class:"text-gray-900 leading-none font-semibold" do %>
        <%= article_preview_alt.user.username %>
      <% end %>
      <p class="text-gray-600"><%= time_ago_in_words article_preview_alt.updated_at %></p>
    </div>
  </div>
  <div class="px-6 py-4">
    <% article_preview_alt.categories.each do |category|%>
      <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2" style="<% "background-color: #{category.color};" %>">
        <%= link_to category.title, category%>
      </span>
    <% end %>
  </div>
</div>