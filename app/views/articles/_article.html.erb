<div class="">
  <div class="flex justify-center">
    <h2 class="text-4xl font-semibold"><%= article.title %></h2>
  </div>
  <div class="text-justify bg-white p-4 rounded-lg shadow-lg">
    <p><%= article.content %></p>
    <div class="flex justify-between m-5">
      <div class="block">
        <%= link_to users_profile_path(article.user.id) do %>
          <div class="flex text-indigo-500 hover:text-indigo-400">
              <%= gravatar_image_tag article.user.email, class:"relative z-10 block h-12 w-12 rounded-full" %>
              <span class="self-center text-current font-semibold mx-3"><%= article.user.username %></span>
          </div>
        <% end %>
      <p class="text-gray-700 self-center mt-2">
        <% if article.updated_at.to_i == article.created_at.to_i %>
          Created <span><%= time_tag article.created_at %></span>
        <% else %>
          Updated <span><%= time_tag article.updated_at %></span>
        <% end %>
      </p>
      </div>
      <div class="block">
        <% if current_user == @article.user %>
          <%=link_to "Delete Article", @article, method: :delete, class:"mt-2 mr-2 px-3 py-2 bg-indigo-500 hover:bg-indigo-400 font-semibold text-gray-100 rounded shadow-lg transition ease-in-out duration-150"%>
          <%=link_to "Edit Article", edit_article_path, class:"mt-2 px-3 py-2 bg-gray-100 hover:bg-white font-semibold text-indigo-500 rounded shadow-lg transition ease-in-out duration-150 border" %>
        <% end %>
      </div>
    </div>
  </div>
</div>