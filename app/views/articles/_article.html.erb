<div class="card mt-4">
  <div class="card-header"><h3><%= article.title %></h3></div>
  <div class="card-body">
    <p class="text-secondary">Created by <%= article.user.email %> since <%= time_ago_in_words article.updated_at %></p>
    <%= article.content %>
  </div>
  <div class="card-footer">
    <strong>Tags: </strong>
    <% tags = article.tags
       tags.each do |tag|%>
      <%= tag %>
    <% end %>

    <strong>Categories:</strong>
    <% article.categories.each do |category|%>
      <span class="badge bage-pill padding" style="background-color: <%= category.color %>">
        <%= link_to category.title, category, class:"text-white"%>
      </span>
    <% end %>

    <strong>ID: </strong>
    <%= article.id %>
  </div>
</div>