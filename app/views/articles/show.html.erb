<%= content_for :title, @article.title %>
<%= render "shared/navbar" %>
<div class="container mx-auto my-5">
  <%= render @article %>
  <div class="mx-2 my-5">
    <h3 class="text-2xl text-gray-700 font-semibold">
      Comments
    </h3>
  </div>
  <%= render(:partial => "comments/comment", :collection => @comments) || render(partial: "comments/not_found_comments", locals: {message: "This article doesn't have comments.", subtitle: "Be the first to comment!"}) %>
  <%= render "comments/form" %>
</div>
<%= render "shared/footer" %>
