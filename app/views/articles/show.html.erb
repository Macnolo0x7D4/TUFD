<%= render "shared/navbar" %>
<div class="container mx-auto my-5">
  <%= render @article %>
  <div class="mx-2 my-5">
    <h3 class="text-2xl text-gray-700 font-semibold">
      Comments
    </h3>
  </div>
  <%= render @comments %>
  <%= render "comments/form" %>

  <% if current_user == @article.user %>
    <button><%=link_to "Delete Article", @article, method: :delete %></button>
    <button><%=link_to "Edit Article", edit_article_path%></button>
  <% end %>
</div>
<%= render "shared/footer" %>
