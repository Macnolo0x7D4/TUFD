<% if user_signed_in? %>
  <%= form_with(model: [@article, @comment]) do |form| %>
    <div class="block my-4 p-4 bg-white rounded-lg border shadow-lg">
      <%= form.text_area :content, { :placeholder => "Write your comment here...", class:"w-full placeholder-gray-700"} %>
      <%= form.submit class:"mt-2 mr-2 px-3 py-2 bg-indigo-500 hover:bg-indigo-400 font-semibold text-gray-100 rounded shadow-lg transition ease-in-out duration-150" %>
      <button class="mt-2 px-3 py-2 bg-gray-100 hover:bg-white font-semibold text-indigo-500 rounded shadow-lg transition ease-in-out duration-150 border">Discard Comment</button>
    </div>
  <% end %>
<% else %>
  <div class="flex items-center bg-blue-500 text-white text-sm font-bold px-4 py-3 rounded-lg" role="alert">
    <svg class="fill-current w-4 h-4 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M12.432 0c1.34 0 2.01.912 2.01 1.957 0 1.305-1.164 2.512-2.679 2.512-1.269 0-2.009-.75-1.974-1.99C9.789 1.436 10.67 0 12.432 0zM8.309 20c-1.058 0-1.833-.652-1.093-3.524l1.214-5.092c.211-.814.246-1.141 0-1.141-.317 0-1.689.562-2.502 1.117l-.528-.88c2.572-2.186 5.531-3.467 6.801-3.467 1.057 0 1.233 1.273.705 3.23l-1.391 5.352c-.246.945-.141 1.271.106 1.271.317 0 1.357-.392 2.379-1.207l.6.814C12.098 19.02 9.365 20 8.309 20z"/></svg>
    <p>You need to sign in to create comments or articles. <%= link_to "Log in", new_user_session_path, class:"btn btn-link underline" %> or <%= link_to "Sign up", new_user_registration_path, class:"btn btn-link underline" %></p>
  </div>
<% end %>